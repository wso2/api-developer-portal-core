<section class="section mt-0 mb-6">
  <div class="container-fluid">
    <!-- Page Header -->
    <div class="container-header mb-4 d-sm-flex justify-content-between align-items-center">
      <span>Billing & Usage</span>
    </div>
    <p class="text-muted mb-4">Manage your subscriptions, view usage, and access invoices</p>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs billing-tabs mb-4 d-flex flex-row" id="billingTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="usage-tab" data-bs-toggle="tab" data-bs-target="#usage" type="button" role="tab" aria-controls="usage" aria-selected="true">
              <i class="fas fa-chart-line me-2"></i>Usage Summary
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="invoices-tab" data-bs-toggle="tab" data-bs-target="#invoices" type="button" role="tab" aria-controls="invoices" aria-selected="false">
              <i class="fas fa-file-invoice me-2"></i>Invoices
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="payment-tab" data-bs-toggle="tab" data-bs-target="#payment" type="button" role="tab" aria-controls="payment" aria-selected="false">
              <i class="fas fa-credit-card me-2"></i>Payment Details
            </button>
          </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="billingTabContent">
          
          <!-- Usage Summary Tab -->
          <div class="tab-pane fade show active" id="usage" role="tabpanel" aria-labelledby="usage-tab">
            <div class="card dev-card">
              <div class="card-body p-4">
                <h5 class="card-title mb-4">API Usage Overview</h5>
                
                <!-- Usage Period Selector -->
                <div class="row mb-4">
                  <div class="col-md-4">
                    <label class="form-label">Period</label>
                    <select class="form-select" id="usagePeriod" onchange="loadUsageData()">
                      <option value="current">Current Month</option>
                      <option value="last30">Last 30 Days</option>
                      <option value="last90">Last 90 Days</option>
                    </select>
                  </div>
                </div>

                <!-- Usage Statistics Cards -->
                <div class="row g-4 mb-4">
                  <div class="col-md-3">
                    <div class="stat-card">
                      <div class="stat-icon bg-primary">
                        <i class="fas fa-exchange-alt"></i>
                      </div>
                      <div class="stat-content">
                        <h3 id="totalRequests" class="stat-value">--</h3>
                        <p class="stat-label">Total API Calls</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-card">
                      <div class="stat-icon bg-success">
                        <i class="fas fa-layer-group"></i>
                      </div>
                      <div class="stat-content">
                        <h3 id="activeSubscriptions" class="stat-value">--</h3>
                        <p class="stat-label">Active Subscriptions</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-card">
                      <div class="stat-icon bg-warning">
                        <i class="fas fa-dollar-sign"></i>
                      </div>
                      <div class="stat-content">
                        <h3 id="estimatedCost" class="stat-value">--</h3>
                        <p class="stat-label">Estimated Cost</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-card">
                      <div class="stat-icon bg-info">
                        <i class="fas fa-clock"></i>
                      </div>
                      <div class="stat-content">
                        <h3 id="avgResponseTime" class="stat-value">--</h3>
                        <p class="stat-label">Avg Response Time</p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Usage by Subscription Table -->
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>API</th>
                        <th>Application</th>
                        <th>Plan</th>
                        <th>Requests</th>
                        <th>Billing Type</th>
                        <th>Cost</th>
                      </tr>
                    </thead>
                    <tbody id="usageTableBody">
                      <tr>
                        <td colspan="6" class="text-center py-4">
                          <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                          Loading usage data...
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <!-- Invoices Tab -->
          <div class="tab-pane fade" id="invoices" role="tabpanel" aria-labelledby="invoices-tab">
            <div class="card dev-card">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h5 class="card-title mb-0">Invoice History</h5>
                  <div class="d-flex gap-2 align-items-center">
                    <label for="invoicePeriod" class="mb-0 me-2">Period:</label>
                    <select id="invoicePeriod" class="form-select form-select-sm" style="width: auto;" onchange="loadInvoices()">
                      <option value="last3months">Last 3 Months</option>
                      <option value="last6months">Last 6 Months</option>
                      <option value="lastyear">Last Year</option>
                      <option value="all">All Time</option>
                    </select>
                    <button class="common-btn-outlined ms-2" onclick="downloadAllInvoices()">
                      <i class="fas fa-download me-2"></i>Download All
                    </button>
                  </div>
                </div>

                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Invoice Number</th>
                        <th>Date</th>
                        <th>Period</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody id="invoicesTableBody">
                      <tr>
                        <td colspan="6" class="text-center py-4">
                          <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                          Loading invoices...
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <!-- Empty State -->
                <div id="noInvoices" class="text-center py-5" style="display: none;">
                  <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                  <p class="text-muted">No invoices found for the selected period</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Payment Details Tab -->
          <div class="tab-pane fade" id="payment" role="tabpanel" aria-labelledby="payment-tab">
            <div class="row g-4">
              
              <!-- Payment Methods Card -->
              <div class="col-12">
                <div class="card dev-card">
                  <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h5 class="card-title mb-0">Payment Methods</h5>
                      <button class="common-btn-outlined" onclick="console.log('ðŸ”µ Button clicked!'); addPaymentMethod(); return false;">
                        <i class="fas fa-credit-card me-2"></i>Manage in Stripe
                      </button>
                    </div>

                    <div id="paymentMethodsList" style="max-height: 200px; overflow-y: auto;">
                      <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                        Loading payment methods...
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Subscription Management Card -->
              <div class="col-12" id="subscriptions-section">
                <div class="card dev-card">
                  <div class="card-body p-4">
                    <h5 class="card-title mb-4">Active Subscriptions</h5>
                    
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>API</th>
                            <th>Application</th>
                            <th>Plan</th>
                            <th>Billing Cycle</th>
                            <th>Amount</th>
                            <th>Next Billing Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody id="subscriptionsTableBody">
                          <tr>
                            <td colspan="8" class="text-center py-4">
                              <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                              Loading subscriptions...
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
  </div>
</section>
