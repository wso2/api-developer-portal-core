        window.onload = function() {
            document.getElementById('loading-screen').style.display = 'none';
        };
    </script>
</head>

<body class="main-body">
    <div id="loading-screen">
        {{> loading }}
    </div>

    {{> header }}
    <main class="main-container">
       {{> sidebar }}
        <div class="content-area">
        {{{ body }}}
        </div>
    </main>
    {{> footer }}
</body>

</html>
