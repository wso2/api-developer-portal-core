<header>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <nav class="navbar navbar-expand-lg custom-navbar fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="{{baseUrl}}">
        <img src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/devportalLogo.png" alt="Logo" class="navbar-logo me-2" />
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="d-flex align-items-center">
        {{#if profile}}
        <a class="dropdown-toggle profile-link d-flex align-items-center p-1 fw-light" href="#" id="navbarDropdown"
          role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/profile.svg" alt="Profile" class="profile-icon me-2" />
          <span>{{profile.firstName}}</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end profile-options" aria-labelledby="navbarDropdown">
          <li class="dropdown-item">
            <div class="userprofile-info d-flex align-items-center">
              <img src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/profile.svg" class="avatar me-2" />
              <div>
                <span class="user-name d-block">{{profile.firstName}} {{profile.lastName}}</span>
                <span class="user-email text-muted">{{profile.email}}</span>
              </div>
            </div>
          </li>
          <li>
            <hr class="dropdown-divider" />
          </li>
          <li class="dropdown-item">
            <i class="fas fa-sign-out-alt me-2"></i>
            <a href="{{baseUrl}}/logout" class="profile-dropdown-link">Log Out</a>
          </li>
        </ul>
        {{else}}
        <div id="auth-section">
          <a class="common-btn-primary me-2" href="{{baseUrl}}/login">Log In</a>
        </div>
        {{/if}}
      </div>
    </div>
  </nav>
</header>