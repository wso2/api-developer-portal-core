<section class="apis-section">
  <div class="container-fluid">
    <div class="apilist-hero-container">
      <div class="apilist-hero-content">
        <div class="apilist-hero-header">
          <h1 class="apilist-hero-title">
            Discover, Integrate, and Innovate with Scalable APIs
          </h1>
          <div class="apilist-hero-description">
            Explore our extensive API catalog and discover how to integrate them seamlessly into your application.
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-12 apilist-hero-image">
        <img
          src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/apisHeroImg.png"
          alt="Hero Image" class="img-fluid" />
      </div>
    </div>
  </div>
  <div class="container-fluid apilist-container">
    <div class="search-container">
      <div class="search-input">
        <img src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/search.svg"
          alt="search" class="search-icon" />
        <input type="text" id="query" placeholder="Search APIs" autocomplete="off" />
      </div>
    </div>
    <div class="row row-gap-4">
      {{#if (eq apiMetadata.length 0)}}
      <div class="ps-3" id="no-subscription">
        <div class="api-info-box">
          <div class="api-info-content">
            <div class="api-info-title">
              No APIs available.
            </div>
          </div>
        </div>
      </div>
      {{/if}}
      {{#apiMetadata}}
      {{#unless (eq apiInfo.apiType "MCP")}}
      <div class="col-lg-4 col-md-6 col-sm-12" id="apiCard-{{apiID}}">
        <div class="card api-card d-flex flex-column">
          <div class="api-card-header d-flex align-items-center gap-3 position-relative overflow-hidden" 
               onclick="window.location.href='{{../baseUrl}}/api/{{apiHandle}}'" style="cursor: pointer;">
               {{#if apiInfo.apiImageMetadata.api-icon}}
                  <img src="{{apiInfo.apiImageMetadata.api-icon}}" class="api-card-img" alt="..." />
                {{else}}
                  <div class="image-icon">{{firstTwoLetters apiInfo.apiName}}</div>
                {{/if}}
            <div class="flex-grow-1">
              <h5 class="api-card-title mb-0">{{apiInfo.apiName}}</h5>
              <div class="d-flex align-items-center gap-2">
                <p class="mb-0 mt-1" style="font-size: 16px;">{{apiInfo.apiVersion}}</p>                         
                <div class="type-badge badge-custom2" style="display: flex; flex-direction: row; align-items: center;">
                  <div style="margin-right: 8px; display: flex;">
                    {{#if (eq apiInfo.apiType "WS")}}
                    <img
                      src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/WebSocket.svg"
                      style=" height: 16px; object-fit: contain;"
                    />
                    {{else}}
                    <img
                      src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/REST.svg"
                      style=" height: 16px; object-fit: contain;"
                    />
                    {{/if}}
                  </div>
                  {{#if (eq apiInfo.apiType "WS")}}
                  <span>WebSocket</span>
                  {{else}}
                  <span>{{apiInfo.apiType}}</span>
                  {{/if}}
                </div>
              </div>
            </div>
            {{#if ../isAuthenticated}}
            <div class="subscription-flag fw-bold" style="display: {{#if (some applications "subscribed")}}block{{else}}none{{/if}};">Subscribed</div>
            {{/if}}
          </div>
          <div class="api-card-body flex-grow-1" onclick="window.location.href='{{../baseUrl}}/api/{{apiHandle}}'" style="cursor: pointer;">
            <div class="truncate-text fw-light apilisting-api-description small mb-3">{{apiInfo.apiDescription}}</div>
            
            {{#if subscriptionPolicies}}
            <div class="mb-3">
              <div class="d-flex align-items-center mb-2">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor" style="margin-right: 6px; color: #666;">
                  <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
                </svg>
                <span class="small fw-semibold text-muted" style="font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">Available Plans</span>
              </div>
              <div class="pricing-chips-container d-flex flex-wrap gap-2">
                {{#each subscriptionPolicies}}
                <span class="badge pricing-chip" style="background-color: #f8fafc; color: #334155; border: 1px solid #e2e8f0; padding: 8px 14px; border-radius: 20px; font-weight: 600; font-size: 12px; white-space: nowrap; box-shadow: 0 1px 2px rgba(0,0,0,0.05); transition: all 0.2s ease;">
                  <span style="color: #0f172a;">{{displayName}}</span>
                  {{#if pricingModel}}
                    {{#compare pricingModel "===" "FLAT"}}
                      {{#if flatAmount}}
                      <span style="color: #64748b; font-weight: 500; margin-left: 6px;">• {{currency}} {{formatPrice flatAmount}}/{{billingPeriod}}</span>
                      {{else}}
                      <span style="color: #16a34a; font-weight: 600; margin-left: 6px;">• Free</span>
                      {{/if}}
                    {{else}}
                      {{!-- PER_UNIT pricing --}}
                      {{#if unitAmount}}
                      <span style="color: #64748b; font-weight: 500; margin-left: 6px;">• {{currency}} {{formatPrice unitAmount}} per unit</span>
                      {{else}}
                      <span style="color: #16a34a; font-weight: 600; margin-left: 6px;">• Free</span>
                      {{/if}}
                    {{/compare}}
                  {{else}}
                    {{!-- Fallback for plans without pricing model --}}
                    <span style="color: #16a34a; font-weight: 600; margin-left: 6px;">• Free</span>
                  {{/if}}
                </span>
                {{/each}}
              </div>
            </div>
            {{/if}}
            
            <div class="row">
              <div class="apilisting-tags">
                {{#apiInfo.tags}}
                <span class="badge badge-custom2">{{this}}</span>
                {{/apiInfo.tags}}
              </div>
            </div>
          </div>
          {{#unless (isFederatedAPI apiInfo.gatewayVendor)}}
          {{#if ../isAuthenticated}}
          <hr class="card-separator" />
          {{/if}}
          <div class="api-card-footer">
            <div id="btnSection" class="d-flex align-items-center gap-2 w-100">
              {{#if ../isAuthenticated}}
              <div id="subscriptionBox" class="subscription-container w-100">
                {{> subscription-plans apiInfo=apiInfo apiName=apiInfo.apiName}}
                {{#if subscriptionPolicies.length}}

                <p class="subscription-box-label">Application: </p>
                <div class="custom-dropdown">
                  <input type="hidden" id="selectedAppId-{{apiID}}" value="" />
                  {{!-- Hidden field for subscribeAndCheckout to find application ID --}}
                  <input type="hidden" id="modal-selected-app-{{apiID}}" value="" />
                  <div class="custom-select-container">
                    <div class="select-selected" role="combobox" aria-expanded="false" aria-haspopup="listbox">
                      <span class="selected-text small">Create an app</span>
                      <span class="select-arrow"></span>
                    </div>
                    <div class="select-items" role="listbox">
                      <div class="select-search-container">
                        <input type="text" class="select-search-input {{#if @root.isReadOnlyMode}}d-none{{/if}}" placeholder="Find or create an application..."
                          aria-label="Search applications">
                      </div>
                      <div class="select-items-container">
                        {{#each applications}}

                        <div class="select-item {{#if subscribed}}disabled{{/if}}" role="button" data-value="{{id}}"
                          data-app-name="{{name}}">
                          <div class="d-flex flex-column flex-grow-1">
                            <span class="fw-semibold">{{name}}</span>
                            {{#if subscriptionPolicy}}
                            <small style="font-size: 11px; margin-top: 3px;">
                              <span class="badge" style="background-color: #e0f2fe; color: #0369a1; padding: 2px 8px; border-radius: 10px; font-weight: 600; font-size: 10px;">
                                {{subscriptionPolicy.policyName}}
                              </span>
                            </small>
                            {{/if}}
                          </div>
                          {{#if subscribed}}
                          <img src="https://raw.githubusercontent.com/wso2/docs-bijira/refs/heads/main/en/devportal-theming/success-rounded.svg"
                            alt="Subscribed" class="subscription-icon" style="width: 18px; height: 18px; flex-shrink: 0;" />
                          {{/if}}
                        </div>

                        {{/each}}
                      </div>
                      <div class="create-app-container" style="display: none;">
                        <div class="create-app-option" role="button">
                          Create application "<span class="search-term"></span>"
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                {{#if (eq subscriptionPolicies.length 1)}}
                 {{!-- Single plan: Check if paid or free --}}
                 {{#with (lookup subscriptionPolicyDetails 0)}}
                   {{#if pricingMetadata.externalPriceId}}
                     {{!-- Paid plan: Route to Stripe checkout --}}
                     <a type="button" 
                        id="subscribe-btn-{{policyID}}"
                        class="common-btn-primary subscribe-btn {{#if @root.isReadOnlyMode}}disabled{{/if}}"
                        data-policy-id="{{policyID}}"
                        data-policy-name="{{policyName}}"
                        data-external-price-id="{{pricingMetadata.externalPriceId}}"
                        data-is-paid="true"
                        onclick="showSubscribeButtonLoading(this); handleListingSubscribe('{{../../orgID}}', '{{../apiID}}', '{{../apiReferenceID}}', '{{policyID}}', '{{policyName}}', 'selectedAppId-{{../apiID}}', this)" 
                        disabled>Subscribe &amp; Pay</a>
                   {{else}}
                     {{!-- Free plan: Direct subscription --}}
                     <a type="button" 
                        id="subscribe-btn-{{policyID}}"
                        class="common-btn-primary subscribe-btn {{#if @root.isReadOnlyMode}}disabled{{/if}}"
                        data-policy-id="{{policyID}}"
                        data-policy-name="{{policyName}}"
                        data-is-paid="false"
                        onclick="showSubscribeButtonLoading(this); handleListingSubscribe('{{../../orgID}}', '{{../apiID}}', '{{../apiReferenceID}}', '{{policyID}}', '{{policyName}}', 'selectedAppId-{{../apiID}}', this)" 
                        disabled>Subscribe</a>
                   {{/if}}
                 {{/with}}
                {{else}}
                 {{!-- Multiple plans: Open modal --}}
                 <a type="button" class="common-btn-primary subscribe-btn" onclick="openModalWithApp('planModal-{{apiID}}', 'selectedAppId-{{apiID}}')" disabled>Subscribe</a>
                {{/if}}                {{/if}}
              </div>
              {{/if}}
            </div>
            
            <div class="message-overlay hidden">
              <div class="message-content">
                <i class="bi message-icon"></i>
                <p class="message-text"></p>
              </div>
              <button type="button" class="close-message" aria-label="Close message">&times;</button>
            </div>
          </div>
          {{/unless}}
        </div>
      </div>
      {{/unless}}
      {{/apiMetadata}}
    </div>
  </div>
</section>
